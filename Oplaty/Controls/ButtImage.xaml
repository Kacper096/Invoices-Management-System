<UserControl x:Class="Oplaty.Controls.ButtImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Oplaty.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Name="ownButton">
    <Button Click="Button_Click" Style="{StaticResource ButtImageStyle}" Command="{Binding ElementName=ownButton, Path=Command}">
        <WrapPanel>
            <TextBlock Text="{Binding ElementName=ownButton, Path=Text}"/>
            <Image Source="{Binding ElementName=ownButton, Path=ImageSource}"/>
        </WrapPanel>
    </Button>
</UserControl>
